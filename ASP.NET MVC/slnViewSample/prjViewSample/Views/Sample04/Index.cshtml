@model IEnumerable<prjViewSample.Models.Movie>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" style="margin-top:20px;">
        <h2>跟著實務學習ASP.NET MVC導讀系列課程影片</h2>
        <p>
            @{
                int i = 0;
                foreach (var item in Model)
                {
                    <a href="@Url.Action("Index")?n=@i"
                       onmouseover="fnMouseOver('@item.Name');"
                       onmouseout="fnMouseOut();" class="btn btn-success">
                        第 @(i + 1) 集
                    </a>
                    i++;
                }
            }

        </p>
        <div class="card">
            <div class="card-header bg-warning">
                目前課程：<span id="spanTitle"></span>
            </div>
            <div class="card-body">
                <iframe width="560" height="315"
                        src="https://www.youtube.com/embed/@ViewBag.MovieId"
                        frameborder="0" allow="autoplay; encrypted-media"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>


    <script>
        function fnMouseOver(title) {
            document.getElementById("spanTitle").innerHTML = title;
        }
        function fnMouseOut() {
            document.getElementById("spanTitle").innerHTML = "";
        }
    </script>
</body>
</html>
