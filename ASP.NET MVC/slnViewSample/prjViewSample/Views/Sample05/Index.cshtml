@model IEnumerable<prjViewSample.Models.Movie>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" style="margin-top:20px;">
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    @*
                        1. col-是手機板，col-md是大螢幕，有固定px的用法，可參考Bootstrap官方文件
                        2. img-thumbnail是縮圖樣式
                        3. embed-responsive是響應式樣式
                    *@
                    <div class="col-12 col-md-4" style="margin-top:20px;">
                        <div class="img-thumbnail">
                            <iframe class="embed-responsive"
                                    src="https://www.youtube.com/embed/@item.Id"
                                    frameborder="0" allow="autoplay; encrypted-media"
                                    allowfullscreen></iframe>
                            <h4>@item.Name</h4>
                            <a href="https://www.youtube.com/watch?v=@item.Id"
                               target="_blank" class="btn btn-primary">瀏覽</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>
